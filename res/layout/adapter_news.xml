<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding" >
	
    <ImageView
        android:id="@+id/adapter_news_preview"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp" />
    
    <TextView
        android:id="@+id/adapter_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignTop="@id/adapter_news_preview"
        android:layout_toRightOf="@id/adapter_news_preview"
        android:textSize="16sp"
        android:textColor="#ff000000" />
    
    <TextView
        android:id="@+id/adapter_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignLeft="@id/adapter_news_title"
        android:layout_below="@id/adapter_news_title"
        android:textSize="14sp"
        android:textColor="#ff555555" />
    
    <TextView
        android:id="@+id/adapter_news_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/adapter_news_content"
        android:textSize="14sp"
        android:textColor="#ff555555" />

</RelativeLayout>